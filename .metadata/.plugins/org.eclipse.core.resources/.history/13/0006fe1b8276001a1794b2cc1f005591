package Greeedy;

import java.util.LinkedList;
import java.util.Queue;

public class Programers42860 {
	public int solution(String name) {
		int answer = 0;
		// 0 2 1

		char[] words = name.toCharArray();
		int len = words.length;
		Queue<Integer> queue = new LinkedList<Integer>();
		queue.add(0);

		/*
		 * 
		 * 
		 * 
		*/
		StringBuilder sb=  new StringBuilder();
		for (int i = 0; i < words.length; i++) {
			sb.append("A");
		}
		System.out.println(sb.toString());

		while (!queue.isEmpty()) {
			
			
			int i = queue.poll();
			System.out.println(i+"확인");
			answer += Math.min(words[i] - 'A', Math.abs(Math.abs('Z' - words[i]+1) ));
			System.out.println(answer);
			words[i] = 'A';
			

			int leftIndex = i;
			int rightIndex = i;
			int leftCount = 0;
			int rightCount = 0;

			while (true) {
				leftIndex--;
				if (leftIndex < 0) {
					leftIndex = len - 1;
				}
				leftCount++;
				if(leftCount >= len) {
					return answer;
				}
				if (!(words[leftIndex] == 'A')) {
					break;
				}
			}
			while (true) {
				rightIndex++;
				if (rightIndex >= len) {
					rightIndex = 0;
				}
				rightCount++;

				if (!(words[rightIndex] == 'A')) {
					break;
				}
			}

			int min = Math.min(rightCount, leftCount);
			answer += min;
			System.out.println(answer);
			if (min == rightCount) {
				queue.add(rightIndex);
				continue;
			}
			if (min == leftCount) {
				queue.add(leftIndex);
				
			}

			

		}

		return answer;
	}
}
