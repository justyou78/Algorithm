package Greeedy;

public class Programers42860 {
	public int solution(String name) {
        int answer = 0;
        // 0 2 1
        
        
        
        char[] words = name.toCharArray();
        for (int i = 0; i < words.length; i++) {
        	int leftCount = i;
            int rightCount = i;
            
        	answer += Math.min(words[i] - 'A', Math.abs('A' - words[i]));
        	while(true) {
        		leftCount--;
        		rightCount++;
        	}
        	
			
			
		}
        
        return answer;
    }
}
